<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/location_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:src="@drawable/ic_location" />
    <TextView
        android:id="@+id/location_item_temperature_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/location_item_icon"
        android:layout_alignBottom="@id/location_item_icon"
        android:gravity="center_vertical"
        android:text="bcdbcd"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <TextView
        android:id="@+id/location_item_name_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/location_item_icon"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="abcabc"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>